<div class="card mb-3" style="max-width: 540px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="<%= user.avatar.attached? ? url_for(user.avatar) : '#' %>" class="img-fluid rounded-start" alt="User image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= @user.name %></h5>
        <p class="card-text">Title: <%= @user.title%></p>
        <p class="card-text"><small class="text-body-secondary email"><%= @user.role%></small></p>
      </div>
    </div>
  </div>
</div>