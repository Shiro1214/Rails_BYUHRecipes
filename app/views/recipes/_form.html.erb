<%= bootstrap_form_with(model: @recipe) do |f| %>
  <%= f.alert_message "Please fix the erros below.", error_summary: false %> <!-- f: we don't need it to display task.errors -->
  <%= f.text_field :imgUrl %>
  <%= f.file_field :image, label: "Recipe Image" %>
  <%= f.text_field :name %>
  <%= f.number_field :servingSize %>
  <%= f.number_field :budget %>
  <%= f.number_field :prepTime %>
  <%= f.number_field :cookTime %>
  <%= f.text_field :ingredients %>
  <%= f.text_field :storesAvailable %>
  <%= f.text_field :cookingDirection %>
  <%= f.primary @recipe.persisted? ? 'Update Recipe' : "Create Recipe" %>
<% end %>